@model Proyecto_Inmobiliaria_MVC.Models.Pago
@{
    ViewData["Title"] = "Pagos Edicion";
}
<div class="text-center">
	<h1 class="display-4">Pagos Edicion</h1>
</div>
<form asp-action="ActualizarPago" method="post" id="formEditarPago">
<div class="mb-3">
<label for="exampleInputFecha_pago" class="form-label">Editar Fecha de pago</label>
<input type="date" class="form-control" id="exampleInputFecha_pago" name="Fecha_pago" value="@Model.Fecha_pago.ToString("yyyy-MM-dd")">
<input type="hidden" id="Id_pago" name="Id_pago" value="@Model.Id_pago">
<input type="hidden" id="Id_contrato" name="Id_contrato" value="@Model.Id_contrato">
</div>
<div class="mb-3">
<label for="exampleInputMonto" class="form-label">Editar Monto</label>
<input type="text" class="form-control" id="exampleInputMonto" name="Monto" value="@Model.Monto">
</div>
<button type="submit" class="btn btn-primary" >Editar</button>
</form>